[includeIf "gitdir:**/work/**/.git"]
  path = .gitconfig.work

[includeIf "gitdir:**/personal/**/.git"]
  path = .gitconfig.personal

[includeIf "gitdir:**/**/chezmoi/.git"]
  path = .gitconfig.personal


[commit]
  gpgsign = true

[alias]
	cleanup = git fetch -p && git branch -vv | grep ': gone' | awk '{print }' | xargs git branch -D
	pr = gh pr create -f
