#!/usr/bin/env bash

export PATH=$PATH:$WORKSPACE/dotfiles/bash/executables/
#EXPORT
if [[ "$HOSTNAME" == 'deathstar' ]]; then
  #HOME PC
  export WORKSPACE=/c/Users/ArthurH/Documents/Workspace
else
  #WORK PC
  export WORKSPACE=/c/Users/arthur.eggert/Documents/workspace
fi


#BIND LIKE ZSH
bind 'set show-all-if-ambiguous on'
bind 'set completion-ignore-case on'
bind 'TAB:menu-complete'


source $WORKSPACE/dotfiles/bash/lib/helper.bash
_load_bash_files $WORKSPACE/dotfiles/bash/plugins/
_load_bash_files $WORKSPACE/dotfiles/bash/aliases/
_load_bash_files $WORKSPACE/dotfiles/bash/themes/
# _load_bash_files $WORKSPACE/dotfiles/bash/completion/
